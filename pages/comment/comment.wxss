/* pages/comment/comment.wxss */
.comment-box {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  background: rgba(255,255,255,.95);
  box-sizing: border-box;
  padding: 3%;
}
.title image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin: -7rpx 10rpx 0 0;
}
.title text {
  font-size: 30rpx;
}
.comment-box textarea {
  display: block;
  width: 100%;
  height: 150rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  padding: 10rpx;
  font-size: 28rpx;
}