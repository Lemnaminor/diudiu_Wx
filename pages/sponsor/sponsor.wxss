/* pages/sponsor/sponsor.wxss */
.sponsor-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 3%;
  background: #fff;
}
.p1 {
  position: absolute;
  bottom: 3%;
  left: 0;
  width: 100%;
  text-align: center;
  color: #666;
  margin-top: 60rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.pay {
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}
.pay image {
  display: inline-block;
  width: 400rpx;
  height: 400rpx;
  margin-top: 20rpx;
}
.previewimg {
  display: block;
  width: 100%;
  height: auto;
  text-align: center;
}