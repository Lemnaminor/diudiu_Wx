<!--pages/list/userList.wxml-->
<template name="userNavList">
  <navigator url="{{hrefUrl}}" open-type="{{openType}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__hd">
      <image src="{{imgUrl}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
    </view>
    <view class="weui-cell__bd">
      <view style="display: inline-block; vertical-align: middle">{{title}}</view>
      <view class="weui-badge" style="margin-left: 5px;" wx:if="{{badge > 0 ? true : false}}">{{badge}}</view>
    </view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    <!-- <view class="weui-cell__ft weui-cell__ft_in-access">右侧文字</view> -->
  </navigator>
</template>