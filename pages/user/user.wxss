/* pages/user/user.wxss */
@import "../../pages/list/userNavList.wxss";

.user-box1 {
  display: block;
  width: 100%;
  text-align: center;
  background: #23beff;
  padding: 50rpx 0;
}
.header-box {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 6rpx solid #fff;
  overflow: hidden;
}
.user-box1 image {
  display: block;
  width: 100%;
  height: 100%;
}
.user-box1 text {
  color: #fff;
  font-size: 36rpx;
}

/**功能列表**/
.weui-media-box {
  padding: 12rpx 15rpx;
}
.weui-media-box__hd_in-appmsg {
  margin-right: 15rpx;
}
.weui-media-box__thumb {
  width: 64%;
  height: 64%;
  margin: 18%;
}
.weui-media-box__title {
  font-size: 30rpx;
}
.weui-media-box__desc {
  font-size: 26rpx;
}