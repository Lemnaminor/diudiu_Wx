/**index.wxss**/


/**广告图**/
.slide-image {
  display: block;
  width:100%;
  height: 100%;
}

/**滚动提示语**/
.msg-box {
  position: relative;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 0 3%;
}
.noticeImg {
  position: absolute;
  top: 20rpx;
  left: 3%;
  width: 40rpx;
  height: 40rpx;
}
.noticeImg image {
  display: block;
  width: 100%;
  height: 100%;
}
.msg-box swiper {
  display: block;
  width: 100%;
  height: 80rpx;
  /* color: #FF5722; */
  box-sizing: border-box;
  padding: 0 0 0 55rpx;
}
.msglist {
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/**分类导航栏**/
.navbar-box {
  display: block;
  width: 100%;
  background: #fff;
  padding: 40rpx 0;
}
.weui-flex__item {
  text-align: center;
}
.navbar-list1 image {
  display: block;
  width: 60rpx;
  height: 60rpx;
}
.navbar-list1 text {
  display: block;
  color: #666666;
  margin-top: 10rpx;
  font-size: 30rpx;
}
.navbar-list1 view {
  display: inline-block;
  background: #f4f4f4;
  padding: 12rpx;
  box-sizing: border-box;
  border: 10rpx solid #fff;
  border-radius: 50%;
  box-shadow: 0 0 0 3rpx #ddd;
}
.navigator-hover {
  background: #fff;
  opacity: 1!important;
}
.navigator-hover view {
  background: #eee!important;
}
.navigator-hover text {
  color: #333!important;
}
.navigator-hover text {
  color: #23beff!important;
}

